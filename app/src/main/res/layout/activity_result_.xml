<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context="com.databaseielts.mocktest.ielts.database.ieltsdatabase.result_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/expandableToolbarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Result"
        app:titleTextColor="#fff"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textresultid1"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:background="@drawable/picture1"
        android:gravity="center"
        android:hint="Result demo"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="10"
        android:textColor="#e5393755"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Questions"/>
    <TextView

        android:layout_weight="1"
        android:background="@drawable/picture1"
        android:id="@+id/textresultid2"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:hint="Result demo"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="#e5393755"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your result"/>
    <TextView
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:id="@+id/textresultid3"
        android:background="@drawable/picture1"
        android:gravity="center"
        android:hint="Result demo"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="#e5393755"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time taken"
        android:paddingBottom="10dp"/>



</LinearLayout>
